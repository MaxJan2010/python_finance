# variables
deposit = 1000
decimal_factor = 10000
price_safety = 0.97
min_lot = 0.01
volume = 10

class BackTester:
    def __init__(self, symbol, timeframe, start_pos, num_bars, decimal_factor, min_lot, martingale_multiplier):
        self.data = self.get_bars(symbol, timeframe, start_pos, num_bars)  # Get data within constructor
        self.decimal_factor = decimal_factor
        self.min_lot = min_lot
        self.martingale_multiplier = martingale_multiplier

    @classmethod
    def get_bars(cls, symbol, timeframe, start_pos, num_bars):
        mt5.initialize()  # Ensure initialization within the function
        try:
            bars = mt5.copy_rates_from_pos(symbol, timeframe, start_pos, num_bars)
            candles = pd.DataFrame(bars)[['time', 'open', 'high', 'low', 'close', 'spread']]
            candles['time'] = pd.to_datetime(candles['time'], unit='s')
            return candles
        except Exception as e:
            print(f"Error fetching data: {e}")
            return None  # Handle potential errors
        
    def indicator_superTrend(self, period, multiplier):  # st => super trend
        # Calculate the True Range (TR)
        self.data['TR'] = pd.concat([
            self.data['high'] - self.data['low'],
            abs(self.data['high'] - self.data['close'].shift(1)),
            abs(self.data['low'] - self.data['close'].shift(1)),
        ], axis=1).max(axis=1)

        # Calculate the ATR using exponential moving average (EMA)
        self.data['ATR'] = self.data['TR'].ewm(alpha=1/period, min_periods=period).mean()
        
        # Calculate basic upper band & basic lower band
        self.data['BUB'] = round(((self.data["high"] + self.data["low"]) / 2) + (multiplier * self.data["ATR"]),5)
        self.data['BLB'] = round(((self.data["high"] + self.data["low"]) / 2) - (multiplier * self.data["ATR"]),5)
        
        sti = ta.supertrend(self.data['high'], self.data['low'], self.data['close'], length=7, multiplier=3)
        print(sti)



        # self.data.dropna(inplace=True)
        return self.data
        
backTester = BackTester(symbol='EURUSD', 
                        timeframe=mt5.TIMEFRAME_H1, 
                        start_pos=0, 
                        num_bars=6500,
                        decimal_factor=10000, 
                        min_lot=0.1, 
                        martingale_multiplier=2
                        )
backTester.indicator_superTrend(period=7, multiplier=3)

print(backTester.data)